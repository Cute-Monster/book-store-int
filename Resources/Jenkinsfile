pipeline {
    agent {
        label 'Slave'
    }

    environment {
        CR_GITLAB_TOKEN = credentials('cruntov_gitlab_st')
        Aws_Region = 'us-east-1'
        Docker_Registry = '315727832121.dkr.ecr.us-east-1.amazonaws.com'
        Docker_Repository = 'maven-cruntov'
        Docker_Creds = 'CR_AWS_ECR'
        Dockerfile_Path = 'Resources/Dockerfile'

    }
    def Workspace_Cleaning(){
        echo("""
            Cleaning Workspace now
        """)
        cleanWS()
        echo("""
             Workspace Cleaned
        """)
    }
    stages {
        stage('Creating Docker Imgae'){
            steps{
                script{
                    Workspace_Cleaning()
                    docker.withRegistry("https://${Docker_Registry}", "ecr:${Aws_Region}:${Docker_Creds}"){
                        dockerImage = docker.build("${Docker_Registry}/${Docker_Repository}:${BUILD_NUMBER}", "-f ${Dockerfile_Path}" + " .")
                    }
                }
            }
        }

        stage('Push Image to ECR'){
            steps{
                script{
                    docker.withRegistry("https://${Docker_Registry}", "ecr:${Aws_Region}:${Docker_Creds}"){
                        dockerImage.push('${BUILD_NUMBER}')
                    }
                    dockerImage.remove('${BUILD_NUMBER}')
                }
            }
        }
//         when(
//             branch 'master'
//         ){
//             stage('Creating Cluster'){
//                 steps{
//
//                 }
//
//             }
//         }
    }
    post{
        Workspace_Cleaning()
    }
}
